*.appearance: flat solid border
*.borderWidth:	2
*.borderColor:	#5668ac
*.font:	Perfect DOS VGA 437-12
*.marginWidth: 1
*.alignment: center

#-TOOLBAR APPEARANCE KEYS-#
toolbar.button.appearance:	Flat Solid border
toolbar.color.backgroundColor:	#FFFFFF
toolbar.justify:	Center
toolbar.button.backgroundColor:	#ebcb71
toolbar.button.forgroundColor:	#000000
toolbar.button.pressed:	Sunken Solid
toolbar.button.pressed.color:	#dddddd

toolbar.label.appearance:	parentrelative
toolbar.label.color:	#ffffff
toolbar.label.textColor:	#000000

toolbar.windowLabel.appearance:	parentrelative
toolbar.windowLabel.color:	#ffffff
toolbar.windowLabel.textColor:	#000000

toolbar.clock.appearance:	parentrelative
toolbar.clock.color:	#ffffff
toolbar.clock.textColor:	#000000

toolbar.borderColor: black
#-TOOLBAR APPEARANCE KEYS END-#

#-MENU APPEARANCE KEYS-#

menu.frame.appearance:	Flat SOLID BORDER
menu.frame.color:	#f5f0d0
menu.frame.borderColor:	#ebcb71
menu.frame.textColor:	#000000
menu.frame.font: Fixed-10

menu.title.backgroundColor: #DDDDDD
menu.title.textColor: #000000
menu.title.appearance: flat interlaced border
menu.title.color1: #5668AC
menu.title.color2: #AAAAAA

menu.active.appearance:	Raised solid border
menu.active.backgroundColor:	#000000
menu.active.foregroundColor:	#ffffff
menu.active.textColor:	#ffffff

menu.frame.disabledColor:	grey

#-MENU APPEARANCE KEYS END-#

#-WINDOW APPEARANCE KEYS-#
window.button.focus.appearance:	sunken Solid BORDER
window.button.focus.color:	#60997b
window.button.focus.foregroundColor:	#000000

window.button.unfocus.appearance:	Flat Solid BORDER
window.button.unfocus.backgroundColor:	#ffffff
window.button.unfocus.foregroundColor:	#ffffff

window.grip.focus.appearance:	Flat Solid Horizontal BORDER
window.grip.focus.color:	#dddddd

window.grip.unfocus.appearance:	Flat Solid Horizontal BORDER
window.grip.unfocus.color:	#ffffff

window.handle.focus.appearance:	Flat Solid Horizontal BORDER
window.handle.focus.color:	#dddddd

window.handle.unfocus.appearance:	Flat Solid Horizontal BORDER
window.handle.unfocus.color:	#ffffff

window.label.focus.appearance:	flat Interlaced BORDER
window.label.focus.color:	#5668ac
