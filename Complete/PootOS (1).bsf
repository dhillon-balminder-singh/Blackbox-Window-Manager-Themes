window.label.unfocus.colorTo:	#ffffff
window.label.unfocus.textColor:	#000000

window.title.focus.appearance:	Flat Solid border
window.title.focus.backgroundColor:	#dddddd

window.title.unfocus.appearance:	Raised Solid Border
window.title.unfocus.color:	#ffffff

window.button.pressed.appearance:	Sunken Solid Border
