*.appearance: FLAT SOLID border
*.backgroundColor: grey20
#*.marginWidth: 1
*.font: SegoeWP-11:style:Bold
*.textColor: grey80
*.foregroundColor: grey80
menu.active.backgroundColor: #0078D7
menu.active.textColor: #FFFFFF
menu.active.foregroundColor: #FFFFFF
#menu.frame.marginWidth: 5
#*foregroundColor: #2D2D2E
window.label.focus.appearance: flat gradient horizontal border
window.label.focus.color1: grey20
window.label.focus.color2: grey40
*borderColor: #888888
*borderWidth: 1
*.alignment: CENTER

#rootCommand: bsetroot -solid rgb:3B/6E/A5
rootCommand: bsetroot -solid black

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: #0078D7
*button.appearance: flat solid border
*button.foregroundColor: grey80

window.label.unfocus.appearance: flat gradient horizontal border
window.label.unfocus.color1: grey40
window.label.unfocus.color2: grey60

toolbar.windowLabel.appearance: flat gradient horizontal border
toolbar.windowLabel.color1: grey20
toolbar.windowLabel.color2: grey40
toolbar.windowLabel.textColor: #E5DFE5

window.label.focus.textColor: #E5DFE5
window.label.unfocus.textColor: grey30
window.button.unfocus.foregroundColor: dark grey

window.grip.focus.appearance: flat gradient horizontal border
window.grip.focus.color1: dark blue
window.grip.focus.color2: light blue