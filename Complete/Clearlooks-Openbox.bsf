# Clearlooks-Openbox Style #
# Following colours from Clearlooks for Openbox by John McKnight #
# Made by Dhillon,Balminder Singh <dhillon.balminder.singh@gmail.com> #


#Common settings#
*.appearance: raised gradient vertical
*.color: #658fb5
*.colorTo: #4d6982
*.textColor: #FFFFFF
*.alignment: left
*.button.pressed.appearance: Flat Gradient Vertical Border
*.button.pressed.color: #537797
*.button.pressed.colorTo: #50708e
*.button.pressed.borderColor: #3d4c5a
*borderWidth: 1
*marginWidth: 2
*borderColor: #000000

# Menu settings#
menu.frame.appearance: flat solid
menu.frame.backgroundColor: #f8f5f2
menu.frame.foregroundColor: #000000
menu.frame.disabledColor: #aaaaaa
menu.frame.textColor: #000000

menu.active.appearance: Flat Gradient Vertical
menu.active.color: #628cb2
menu.active.color2: #50708d
menu.active.foregroundColor: #ffffff
menu.active.textColor: #ffffff

#Active Window Common settings#
window.label.focus.appearance: parentrelative

#Inactive Window settings#
window.label.unfocus.appearance: parentrelative
#window..title.bg: Raised Gradient Vertical
window.title.unfocus.color: #f1eeea
window.title.unfocus.colorTo: #d8cfc7
window.label.unfocus.textColor: #000000

window.handle.unfocus.color: #f1eeea
window.handle.unfocus.colorTo: #d8cfc7

window.grip.unfocus.color: #f1eeea
window.grip.unfocus.colorTo: #d8cfc7

window.button.unfocus.appearance: parentrelative
#window.inactive.button.pressed.bg: Flat Gradient Vertical Border
window.button.unfocus.color: #efebe7
window.button.unfocus.colorTo: #ddd6ce
#window.inactive.button.pressed.bg.border.color: #8f8173
#window.inactive.button.pressed.image.color: #000000



























