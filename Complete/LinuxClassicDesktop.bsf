rootCommand: bsetroot -gradient diagonalgradient -from royalblue -to black
#rootCommand: bsetroot -gradient verticalgradient -from "#7790AA" -to grey10 

#Global appearance keys#
*.appearance: raised solid border
#General raised solid border look except for active titlebars
*.backgroundColor: #F5F5F5
#Used F5F5F5 colour for an off-white appearance instead of grey/white
*.borderColor: black
*.focus.appearance: raised solid border
*.unfocus.appearance: flat solid border
#*.unfocus.appearance: raised solid border
window.label.focus.appearance: raised gradient border 
*color1: black
*color2: blue
*.borderWidth: 1
*.marginWidth: 1

*.alignment: center
*.font: Bitstream Vera Sans-10

#Active window appearance keys#
window.label.focus.textColor: white
window.font: Bitstream Vera Sans-10:style=Bold

#Inactive window appearance keys#
window.label.unfocus.textColor: darkgrey
window.button.unfocus.foregroundColor: darkgrey

#Menu appearance keys#
menu.title.appearance: raised gradient border
menu.title.textColor:white
menu.title.font: Bitstream Vera Sans-10:style=Bold
menu.frame.disabledColor: darkgrey

#Active menu appearance keys#
menu.active.backgroundColor: dark blue

#Pressed items appearance keys#
*.pressed.appearance: sunken solid
*.pressed backgroundColor: white