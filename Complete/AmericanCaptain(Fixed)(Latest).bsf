rootCommand: bsetroot -solid rgb:0/0/0
*appearance: raised gradient vertical border
*color1: #7898B1
*color2: #FDFEFE
*font: American Captain-12
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: grey
window.label.unfocus.textColor: grey90
*.alignment: center
window.*.unfocus.appearance: raised solid border
window.*.unfocus.backgroundColor: #7898B1
window.*.unfocus.foregroundColor: grey90

