*.appearance: raised gradient vertical border
*.color1: #fdfdfd
*.color2: #bdbdbd

#*.color1: #5c7190
#*.color2: #9cb1d0

*font: Bitstream Vera Sans-12
*.marginWidth: 0

window.title.focus.color1: #5c7190
window.title.focus.color2: #9cb1d0

window.grip.*.appearance: raised solid border
window.grip.focus.backgroundColor: white
window.grip.unfocus.backgroundColor: #AAAAAA

window.title.unfocus.color1: #bdbdbd
window.title.unfocus.color2: #fdfdfd

toolbar.windowLabel.color1: #5c7190
toolbar.windowLabel.color2: #9cb1d0

toolbar.clock.appearance: raised solid border
toolbar.clock.backgroundColor: #dddddd
toolbar.clock.textColor: #444444

toolbar.appearance: raised gradient
#toolbar.label.backgroundColor: #7C91B0
#toolbar.label.textColor: #dddddd

menu.frame.appearance: raised solid border
menu.frame.foregroundColor: #444444
menu.frame.backgroundColor: #dddddd

menu.active.foregroundColor: #000000
menu.active.appearance: raised gradient vertical border
menu.active.color1: #9cb1d0
menu.active.color2: #5c7190

window.label.*.appearance: parentrelative
window.button.*.appearance: raised gradient vertical
window.button.focus.color1: #5c7190
window.button.focus.color2: #9cb1d0
window.button.unfocus.color1: #fdfdfd
window.button.unfocus.color2: #bdbdbd
