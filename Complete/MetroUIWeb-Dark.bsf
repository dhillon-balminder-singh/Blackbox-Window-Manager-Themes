*.appearance: flat solid
*.backgroundColor: #FFFFFF
*.foregroundColor: #FFFFFF
*.textColor: #FFFFFF

*.focus.backgroundColor: #448480
*.unfocus.backgroundColor: #72ADAA

menu.frame.textColor: #969696
menu.frame.backgroundColor: #2E2E2E
menu.frame.foregroundColor: #969696
menu.title.backgroundColor: #448480
menu.title.font::Bold
menu.frame.disabledColor: #969696

menu.active.backgroundColor: #448480

slit.backgroundColor: #448480

toolbar*textColor: #969696
toolbar.backgroundColor: #2E2E2E

toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative

*button.foregroundColor: #969696
*button.pressed.appearance: flat solid
*button.pressed.backgroundColor: #B6B6B6

window.font::Bold

rootCommand: bsetroot -solid grey40