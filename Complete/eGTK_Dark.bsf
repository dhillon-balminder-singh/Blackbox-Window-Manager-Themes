*.alignment:center
*.appearance: raised solid border
*.borderWidth: 1

menu.*.backgroundColor: #383838
menu.*.textColor: #FFFFFF
menu.disabled.textColor: #AAAAAA

menu.active.appearance: raised gradient vertical border
menu.active.color1: #6CAAEC
menu.active.color2: #4086D0
menu.active.borderColor: #4a90d9
menu.active.textColor: #FFFFFF

window.handle.*.appearance: raised solid
window.handle.*.backgroundColor: #EAEBEC

window.grip.*.appearance: raised solid
window.grip.*.backgroundColor: #DEDEDE

window.*.borderColor: #8D8d8D

window.title.*.appearance: flat gradient vertical
window.title.*.color1: #EEEEEE
window.title.*.color2: #DEDEDE

window.label.*.appearance: parentrelative
window.label.focus.textColor: #727272
window.label.unfocus.textColor: #70747d

window.button.*.appearance: parentrelative
window.button.*.foregroundColor: #8d8d8d

#*button.pressed.appearance: parentrelative
#*button.pressed.backgroundColor: #6FA2CA
window.button.pressed.appearance: sunken solid border
window.button.*.pressed.backgroundColor: #6FA2CA

window.title.unfocus.appearance: flat gradient vertical
window.title.unfocus.color1: #EEEEEE
window.title.unfocus.color2: #DEDEDE

#toolbar.appearance: flat solid border
toolbar.appearance: raised solid border
toolbar.color: #383838
#toolbar.color2: #DEDEDE

toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative

#toolbar.*.textColor: #70747d
toolbar.*.textColor: #ffffff

toolbar.button.foregroundColor: #8d8d8d

toolbar.button.foregroundColor: #8d8d8d
toolbar.button.pressed.appearance: sunken solid border
toolbar.button.pressed.backgroundColor: #6FA2CA

slit.appearance: raised solid border
slit.color: #383838
#slit.color2: #DEDEDE

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: darkgrey


