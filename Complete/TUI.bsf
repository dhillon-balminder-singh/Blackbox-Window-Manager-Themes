rootCommand: bsetroot -solid rgb:00/00/A8
*appearance: flat solid border
*backgroundColor: #A8A8A8
*borderColor: #888888
*borderWidth: 1
*marginWidth: 0
#window.title.focus.backgroundColor: #A8A8A8
window.button.focus.foregroundColor: #A8A8A8
window.button.unfocus.foregroundColor: #A8A8A8
*.unfocus.borderColor: #000000
#*.foregroundColor: red

*font: Fixed-12:style=Bold
toolbar.appearance: flat solid
toolbar.label.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.button.appearance: parentrelative

window.label.focus.textColor: #FFFFFF
window.label.unfocus.textColor: #888888
window.button.unfocus.foregroundColor: #A8A8A8