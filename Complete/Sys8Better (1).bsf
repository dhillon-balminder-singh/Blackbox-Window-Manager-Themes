*appearance: raised solid border
*alignment: center
*marginWidth: 1
*backgroundColor: #DDDDDD
*.font: Chicago-10:style=Bold
*textColor: black
*.title.appearance: raised interlaced border
menu.title.color2: #777777
menu.title.color1: #FFFFFF
window.title.focus.appearance: raised solid border
window.title.focus.backgroundColor: #CCCCCC
window.label.focus.appearance: flat interlaced
window.label.focus.color1: #777777
window.label.focus.color2: #FFFFFF
window.button.focus.appearance: raised gradient diagonal border
window.button.focus.color1: #999999
window.button.focus.color2: #FFFFFF
window.button.focus.borderColor: #222222
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: #A4A4A4
#^BUTTON PRESSED COLOR NOT SURE#
toolbar.appearance: raised solid border
toolbar*appearance: flat solid
window.title.unfocus.appearance: flat solid border
window.label.unfocus.appearance: flat solid
window.button.unfocus.appearance: flat solid
window.label.unfocus.textColor: #6E6E6E
#window.frame.unfocus.borderColor: #555555
window.*.unfocus.borderColor: #555555
menu.active.textColor: white
menu.active.backgroundColor: #000052
#^ ACTIVE MENU COLOUR TAKEN FROM OSX DEVELOPER PREVIEW #
window.grip.focus.appearance: raised solid border
window.grip.focus.backgroundColor: #DDDDDD
window.grip.focus.borderColor: #222222