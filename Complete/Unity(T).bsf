*.font: Ubuntu-12:Bold
*.textColor: white
*.foregroundColor: white
*.alignment:center

toolbar.appearance: flat solid border
toolbar.backgroundColor: #111111
toolbar.textColor: white

toolbar.label.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative

toolbar.button.appearance: flat solid border
toolbar.button.backgroundColor: #111111
#toolbar.button.borderColor: white
#toolbar.button.borderWidth: 2

slit.appearance: flat solid border
slit.backgroundColor:  #252525
slit.borderColor: #75476C

window.title.*.appearance: flat solid border
window.title.*.backgroundColor: #111111
window.label.*.appearance: parentrelative

window.button.*.appearance: flat solid border
window.button.*.backgroundColor: #111111


menu.frame.appearance: flat solid border
menu.frame.backgroundColor: #111111
menu.active.appearance: flat solid border
menu.active.backgroundColor: #EA5421

window.button.pressed.appearance: flat solid border
window.button.pressed.backgroundColor: #111111
window.button.pressed.borderColor: white
window.button.pressed.borderWidth: 2

toolbar.button.pressed.appearance: flat solid border
toolbar.button.pressed.backgroundColor: #111111
toolbar.button.pressed.borderColor: white
toolbar.button.pressed.borderWidth: 2