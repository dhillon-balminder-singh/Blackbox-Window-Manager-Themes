*appearance: raised solid border
*backgroundColor: rgb:aa/aa/aa
#*marginWidth: 1
#*borderWidth: 1
#*borderColor: grey40
*alignment: center
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: #DCDCDC
*button.pressed.foregroundColor: black
menu.title.backgroundColor: #4A6980
#menu.title.borderColor: white
menu.title.font: :style=Bold
*alignment: left
window.title.focus.backgroundColor: #4A6980
window.title.focus.borderColor: grey40
window.label.focus.backgroundColor: #4A6980
window.label.focus.font: :style=Bold
window.label.focus.textColor: #fbf5e4
window.button.focus.backgroundColor: #4A6980
window.button.focus.foregroundColor: white
menu.active.backgroundColor: #4A6980
menu.active.foregroundColor: black
menu.active.textColor: #F2EBD9
menu.active.borderColor: black
*unfocus.appearance: raised solid border
*unfocus.borderColor: #615E59
*button.unfocus.backgroundColor: rgb:aa/aa/aa
*label.unfocus.backgroundColor: rgb:aa/aa/aa
*title.unfocus.backgroundColor: rgb:aa/aa/aa
*unfocus.textColor: #737269
*unfocus.foregroundColor: #737269
menu.frame.disabledColor: #78776D
slit.appearance: raised solid border
slit.backgroundColor: #4A6980
toolbar.backgroundColor: #4A6980
toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative