*.appearance: raised gradient horizontal border
*.color1: rgb:50/5a/5e
*.color2: rgb:20/2a/2e

menu.title.color1: rgb:50/5a/5e
menu.title.color2: black

menu.active.appearance: raised solid border
menu.active.backgroundColor: white
menu.active.textColor: black
menu.active.foregroundColor: black

menu.frame.textColor: white
menu.frame.foregroundColor: white

menu.disabled.color: gray60

window.title.focus.color1: rgb:30/32/3e
window.title.focus.color2: black

window.label.*.appearance: parentrelative
window.button.*.appearance: parentrelative
window.label.focus.textColor: white

window.button.focus.foregroundColor: white
window.button.unfocus.foregroundColor: gray20
window.label.unfocus.textColor: gray20

window.title.unfocus.color1: rgb:a0/a2/ae
window.title.unfocus.color2: rgb:90/92/9e

toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.*.textColor: white
toolbar.button.foregroundColor: white