*appearance: raised solid border
*backgroundColor: rgb:aa/aa/aa
#*marginWidth: 1
#*borderWidth: 1
#*borderColor: grey40
*alignment: center
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: #DCDCDC
*button.pressed.foregroundColor: black
menu.title.backgroundColor: #2D2D2D
#menu.title.borderColor: white
menu.title.font: :style=Bold
*alignment: left
window.title.focus.backgroundColor: #2D2D2D
window.title.focus.borderColor: grey40
window.label.focus.backgroundColor: #2D2D2D
window.label.focus.font: :style=Bold
window.label.focus.textColor: white
window.button.focus.backgroundColor: rgb:aa/aa/aa
window.button.focus.foregroundColor: black
menu.active.backgroundColor: white
menu.active.foregroundColor: black
menu.active.textColor: black
menu.active.borderColor: black
*unfocus.appearance: raised solid border
*unfocus.borderColor: gray40
*button.unfocus.backgroundColor: rgb:aa/aa/aa
*label.unfocus.backgroundColor: rgb:aa/aa/aa
*title.unfocus.backgroundColor: rgb:aa/aa/aa
*unfocus.textColor: black
*unfocus.foregroundColor: black
menu.frame.disabledColor: gray40
slit.appearance: raised gradient diagonal border
slit.color1: rgb:a6/a6/b6
slit.color2: rgb:51/55/61
