*.appearance: flat gradient vertical 
*.color1: #001935
*.color2: #EEC396
*.textColor: white

window.label.*.appearance: parentrelative
window.button.*.appearance: parentrelative
window.*.focus.foregroundColor: white
window.*.focus.textColor: white
window.*.unfocus.foregroundColor: darkgrey
window.*.unfocus.textColor: darkgrey

toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.*.textColor: white

toolbar.button.pressed.appearance: sunken gradient vertical border
window.button.pressed.appearance: sunken gradient vertical border
