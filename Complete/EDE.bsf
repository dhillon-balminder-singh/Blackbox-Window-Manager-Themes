rootCommand: bsetroot -solid rgb:48/6C/B0

*.appearance: raised solid border
*.backgroundColor: #D0D4C8
*.foregroundColor: #000000
*.alignment: center
*.font: -11
menu.title.backgroundColor: #000070
window.label.*.appearance: flat solid
window.label.*.backgroundColor: #000070
#*.marginWidth: 2
menu.active.appearance: flat solid
menu.active.backgroundColor: #2874A0
menu.active.foregroundColor: #F8FCF8
window.label.focus.textColor: #C0C0C0

toolbar.appearance: raised solid
toolbar.label.appearance: raised solid
toolbar.button.appearance: raised solid
toolbar.windowLabel.appearance: sunken solid
toolbar.clock.appearance: parentrelative

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: darkgrey