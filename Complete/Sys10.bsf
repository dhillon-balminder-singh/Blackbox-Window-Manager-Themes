*appearance: raised interlaced border
*color1: #FFFFFF
*color2: #EAEAEA
*alignment: center
*marginWidth: 1
*backgroundColor: #FFFFFF
*.font: Chicago-10:style=Bold
*textColor: black
*.title.appearance: raised interlaced border
menu.title.color1: #FFFFFF
menu.title.color2: #EAEAEA
window.title.focus.appearance: raised interlaced border
window.title.focus.color2: #EAEAEA
window.title.focus.color1: #FFFFFF
window.label.focus.appearance: parentrelative
window.button.focus.appearance: flat gradient PYRAMID
window.button.focus.color1: #0046E8
window.button.focus.color2: #FFFFFF
window.button.focus.borderColor: #7F7F7F
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: #A4A4A4
#^BUTTON PRESSED COLOR NOT SURE#


window.title.unfocus.appearance: flat solid border
window.label.unfocus.appearance: flat solid
window.button.unfocus.appearance: flat gradient PYRAMID border
window.button.unfocus.color2: #FFFFFF
window.button.unfocus.color1: #D6D6D6
window.button.unfocus.borderColor: #6B696A
window.label.unfocus.textColor: #8B8B8B
#window.frame.unfocus.borderColor: #7F7F7F
window.*.unfocus.borderColor: #7F7F7F
menu.active.appearance: flat gradient pyramid
menu.active.color2: #0046E8
menu.active.color1: #FFFFFF
menu.active.textColor: white
menu.active.backgroundColor: #0046E8
#^ ACTIVE MENU COLOUR TAKEN FROM OSX DEVELOPER PREVIEW #
window.grip.focus.appearance: raised solid border
window.grip.focus.backgroundColor: #DDDDDD
window.grip.focus.borderColor: #1A335B
*borderColor: #7F7F7F

toolbar.appearance: raised interlaced border
toolbar.color1: #FFFFFF
toolbar.color2: #EAEAEA
toolbar.*.appearance: parentrelative
