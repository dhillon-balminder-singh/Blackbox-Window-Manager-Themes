#COLOURS FROM THE LG OFFICAL WEBSITE#

*appearance: raised solid border

#toolbar.backgroundColor: #7D7D7D
#toolbar.backgroundColor:#666666
#toolbar.backgroundColor: #555555
toolbar.backgroundColor: #333333
toolbar.button.foregroundColor: #FFFFFF
toolbar*textColor: #FFFFFF
toolbar.label.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.button.appearance: parentrelative

menu.title.backgroundColor: #333333
menu.frame.backgroundColor: #ECFFD6
#menu.frame.foregroundColor: #D6D6D6
menu.frame.foregroundColor: #333333
menu.frame.textColor: #000000

menu.active.backgroundColor: #A50034

window.title.focus.backgroundColor: #333333
window.label.focus.backgroundColor: #A50034
#window.label.focus.appearance: parentrelative
window.button.focus.appearance: parentrelative
#window.button.focus.backgroundColor: #333333
window*textColor: #FFFFFF
window.button.focus.foregroundColor: #D6D6D6

window.title.unfocus.backgroundColor: #333333
window.label.unfocus.backgroundColor: #7D7D7D
#window.label.focus.appearance: parentrelative
window.button.unfocus.appearance: parentrelative
window*textColor: #FFFFFF
window.button.unfocus.foregroundColor: #D6D6D6

window.grip.focus.backgroundColor: #A50034
window.grip.unfocus.backgroundColor: #7D7D7D

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: #666666

#slit.backgroundColor: #7D7D7D
#slit.backgroundColor:#666666
#slit.backgroundColor: #555555
slit.backgroundColor: #333333

*font: DejaVu Sans-10

rootCommand: bsetroot -solid rgb:CC/CC/CC










