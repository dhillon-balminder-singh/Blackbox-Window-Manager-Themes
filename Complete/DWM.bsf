*appearance: flat SOLID 
*backgroundColor: #CCCCCC
*marginWidth: 0
*font: Fixed-9
*textColor: #000000

*foregroundColor: #000000

window.label.focus.backgroundColor: #0066FF
window.label.focus.textColor: #0066FF
window.label.unfocus.textColor: #CCCCCC
#window.frame.focus.borderColor: #0066FF
window.title.focus.appearance: flat solid border
window.handle.focus.appearance: flat solid border
window.handle.focus.borderColor: #0066FF

window.grip.focus.appearance: flat solid border
window.grip.focus.borderColor: #0066FF
window.grip.focus.backgroundColor: #0066FF
window.*.focus.borderColor: #0066FF

toolbar.windowLabel.backgroundColor: #0066FF
toolbar.windowLabel.textColor: #FFFFFF
toolbar.label.backgroundColor: #0066FF
toolbar.label.textColor: #FFFFFF

menu.*.appearance: flat solid border
menu.*.borderColor: #0066FF
menu.title.backgroundColor: #0066FF
menu.title.textColor: #FFFFFF
menu.active.backgroundColor: #0066FF
menu.active.textColor: #FFFFFF
menu.active.foregroundColor: #FFFFFF

rootCommand: bsetroot -solid rgb:00/00/00

