#window.title.focus.appearance: flat gradient vertical
#window.title.focus.color2: #013E6F
#window.title.focus.color1: #7D9BE3

window.label.focus.backgroundColor: #013E6F
window.button.unfocus.backgroundColor: #7D9BE3
