*.alignment: center
*marginWidth: 2
*font: -12:style:Bold

menu.frame.appearance: flat solid
menu.frame.backgroundColor: #5A606F
menu.frame.foregroundColor: #353F4D
menu.frame.textColor: white
menu.frame.alignment: left
menu.title.alignment: left

menu.active.appearance: flat gradient vertical
menu.active.color1: #5D6879
menu.active.color2: #1D2839

window.label.focus.appearance: parentrelative
#window.label.focus.color1: #5D6879
#window.label.focus.color2: #1D2839
window.label.focus.textColor: #FFFFFF

window.label.unfocus.appearance: parentrelative
#window.label.unfocus.color1: #7D9BE3
#window.label.unfocus.color2: #013E6F
window.label.unfocus.textColor: #89B2D3

window.button.focus.appearance: parentrelative
#window.button.focus.color1: #5D6879
#window.button.focus.color2: #1D2839

window.button.unfocus.appearance: parentrelative
#window.button.unfocus.color1: #7D9BE3
#window.button.unfocus.color2: #013E6F

window.button.focus.foregroundColor: #FFFFFF
#window.button.unfocus.foregroundColor: #353F4D
#window.button.focus.backgroundColor: #013E6F
#window.button.focus.borderWidth: 1
#window.button.focus.borderColor: white

window.title.focus.appearance: flat gradient vertical
window.title.focus.color1: #5D6879
window.title.focus.color2: #1D2839

window.title.unfocus.appearance: flat gradient
