toolbar.label.textColor: white

toolbar.button.appearance: parentrelative
toolbar.button.color1: #5D6879
toolbar.button.color2: #1D2839

window.button.pressed.appearance: sunken solid
window.button.pressed.backgroundColor: #1A50B8
toolbar.button.pressed.appearance: sunken solid
toolbar.button.pressed.backgroundColor: #1A50B8

menu.frame.disabledColor: #ACA899
menu.frame.font: #LEFT BLANK TO USE DEFAULT FONT WITH REGULAR WEIGHT# 

window.title.unfocus.appearance: flat gradient vertical
window.title.unfocus.color1: #5D6879
window.title.unfocus.color2: #1D2839

window.label.unfocus.appearance: flat gradient vertical
window.label.unfocus.color1: #5D6879
window.label.unfocus.color2: #1D2839

