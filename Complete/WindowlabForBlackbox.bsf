*appearance: flat solid border
*borderWidth: 2
*marginWidth: 1
*backgroundColor: #c0c0c0
toolbar appearance: flat solid

*alignment: left

menu.title.backgroundColor: #f0d000
menu.title.textColor: #000000
menu.active.backgroundColor: #f0d000
menu.active.textColor: #000000
menu.active.foregroundColor: #000000
menu.frame.disabledColor: #404040

window.button.focus.appearance:  flat solid
window.label.focus.appearance: flat solid
*focus.backgroundColor: #f0d000
window.handle.focus.backgroundColor: #c0c0c0

window.button.unfocus.appearance:  flat solid
window.label.unfocus.appearance: flat solid
*unfocus.backgroundColor: #c0c0c0
window.handle.unfocus.backgroundColor: #c0c0c0
*unfocus.textColor: #000000
*unfocus.foregroundColor: #000000

toolbar.windowLabel.backgroundColor: #f0d000
*button.pressed.appearance: flat solid border
*button.pressed.backgroundColor: #c0c0c0
*button.pressed.foregroundColor: #000000
*focus.borderColor: #000000