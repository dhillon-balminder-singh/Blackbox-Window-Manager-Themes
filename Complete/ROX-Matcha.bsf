rootCommand: bsetroot -solid rgb:88/88/88
*.appearance: raised solid border
*.backgroundColor: #DCDAD5
*.foregroundColor: #444444
*.borderColor: #444444
*.alignment: center
*.textColor: #000000
window.label.focus.backgroundColor: #A2CD5A
window.label.unfocus.backgroundColor: #999999
window.label.unfocus.textColor: #787878
*.font: -10
window.button.marginWidth: 1
window.title.marginWidth: 2
menu.title.backgroundColor: #A2CD5A
menu.active.backgroundColor: #A2CD5A
#menu.active.textColor: #FFFFFF
#toolbar.windowLabel.backgroundColor: #A2CD5A

*.button.pressed.appearance: sunken solid border
*.button.pressed.backgroundColor: #A2CD5A
#*.button.pressed.backgroundColor: darkgrey