*appearance: raised solid border
*backgroundColor: rgb:aa/aa/aa
#*marginWidth: 1
#*borderWidth: 1
#*borderColor: #333333
*alignment: center
*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: #DCDCDC
*button.pressed.foregroundColor: #000000
menu.title.backgroundColor: #0088CC
#menu.title.borderColor: white
menu.title.font: :style=Bold
*alignment: left
window.title.focus.backgroundColor: #0088CC
window.title.focus.borderColor: #333333
window.label.focus.backgroundColor: #0088CC
window.label.focus.font: :style=Bold
window.label.focus.textColor: white
window.button.focus.backgroundColor: #0088CC
window.button.focus.foregroundColor: white
menu.active.backgroundColor: #0088CC
menu.active.foregroundColor: #FFFFFF
menu.active.textColor: #FFFFFF
menu.active.borderColor: #000000
*unfocus.appearance: raised solid border
*unfocus.borderColor: #333333
*button.unfocus.backgroundColor: #333333
*label.unfocus.backgroundColor: #333333
*title.unfocus.backgroundColor: #333333
*unfocus.textColor: #999999
*unfocus.foregroundColor: #999999
menu.frame.disabledColor: #999999
slit.appearance: raised solid border
slit.backgroundColor: #ECF2F5

window.title.*.appearance: raised solid border
window.label.*.appearance: parentrelative
window.button.*.appearance: raised solid
window.title.*.marginWidth: 0

window.grip.focus.backgroundColor: #333333
window.grip.unfocus.backgroundColor: #333333

window.handle.focus.backgroundColor: #333333
window.handle.unfocus.backgroundColor: #333333

toolbar.label.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: parentrelative

toolbar.backgroundColor: #0088CC
toolbar.toolbar.clock.textColor: green
toolbar.*.textColor: #FFFFFF
toolbar.button.foregroundColor: #FFFFFF


#CHANGES BELOW:#
#Changed toolbar to match the window title appearance for more consistent look#

toolbar.button.appearance: raised solid
toolbar.marginWidth: 0
toolbar.button.backgroundColor: #0088CC
toolbar.button.pressed.appearance: sunken solid
toolbar.button.pressed.backgroundColor: #DCDCDC
toolbar.button.pressed.foregroundColor: #000000