#Windows 3 Theme for #000000box#
#Set common appearance#
*.appearance: raised solid border
*.backgroundColor: #C0C0C0
*.borderColor: #000000
*.borderWidth: 2
*.marginWidth: 2
*.alignment: center

#*.Label.focus.appearance: raised solid border
*.Label.focus.backgroundColor: #000080
*.label.focus.textColor: #FFFFFF

window.button.*.appearance: raised solid border
window.button.*.backgroundColor: #FFFFFF

#menu.title.appearance: raised solid border
menu.title..backgroundColor: #000080

*.font: Fixed-12:Bold

window.label.unfocus.backgroundColor: #FFFFFF
window.label.unfocus.textColor: #000000

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: darkgrey
window.button.pressed.appearance: sunken solid
window.button.pressed.backgroundColor: darkgrey