*appearance: raised gradient border
*alignment: center
*.font: -10
#*color1: #FED642
#*color2: #FEE382
*.borderColor: #979797
rootCommand: bsetroot -solid RGB:31/65/9C
menu.title.appearance: raised gradient border
*color1: #FAC90A
*color2: #FFCF01
menu.*.appearance: raised solid border
menu.active.backgroundColor: #9C9A9C
#9C9A9C
menu.frame.backgroundColor: #DEDBDE
#window.button.*.appearance: parentrelative
window.label.*.appearance: parentrelative
window.button.focus.foregroundColor: #FFF048
window.button.unfocus.foregroundColor: #A2A2A2
*.textColor: #000000
toolbar.appearance: raised solid border
toolbar.backgroundColor: #DEDBDE
toolbar.label.appearance: parentrelative
toolbar.clock.appearance: sunken solid border
toolbar.clock.backgroundColor: #BDBABD
toolbar.windowLabel.appearance: parentrelative
toolbar.button.appearance: parentrelative
menu.title.font: -12:style=Bold
window.font: -12:style=Bold
*borderWidth: 1
window.title.unfocus.appearance: raised solid border
window.title.unfocus.backgroundColor: #EFEBEF
#window.title.unfocus.color2: #EEEEEE
window.handle.focus.appearance: raised solid border
window.handle.unfocus.appearance: raised solid border
window.handle.focus.backgroundColor: #EFEBEF
window.handle.unfocus.backgroundColor: #EFEBEF
window.grip.unfocus.appearance: raised solid border
window.grip.unfocus.backgroundColor: #EFEBEF

window.button.focus.apperance: raised gradient crosssdiagonal border
window.button.focus.color1: #FFF83B
window.button.focus.color2: #D9AC09
window.button.focus.borderColor: #979797

window.button.unfocus.apperance: raised gradient crosssdiagonal border
window.button.unfocus.color1: #FFFFFF
window.button.unfocus.color2: #DED7DE
window.button.unfocus.borderColor: #FFFFFF

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: darkgrey

menu.frame.foregroundColor: #9C9A9C

slit.appearance: raised solid border
slit.backgroundColor: #DEDBDE