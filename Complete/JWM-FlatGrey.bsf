#Common values#

*appearance: flat solid border
*backgroundColor: #DCDAD5
*foregroundColor: #000000
*font: DejaVu Sans-10
*.textColor: #000000
window.button.*.appearance: parentrelative
window.label.*.appearance: parentrelative

#Menu title values#

menu.active.backgroundColor: #A9A9A9
menu.title.backgroundColor: #A9A9A9

#Window values#
window.title.focus.backgroundColor: #A9A9A9
window.title.unfocus.backgroundColor: #D2D2D2
window.grip.focus.backgroundColor: #A9A9A9
window.grip.unfocus.backgroundColor: #D2D2D2

