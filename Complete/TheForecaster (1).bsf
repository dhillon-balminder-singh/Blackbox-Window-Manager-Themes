*appearance: flat solid 
*.backgroundColor: #F9BEBD
*.foregroundColor: #393535
*.textColor: #393535
*menu.active.backgroundColor: #A38180
menu.title.font: DejaVu Sans-12:Bold
window.font: DejaVu Sans-12:Bold
*alignment: center
menu.frame.font: Serif-12
menu.title.appearance: flat solid
menu.title.backgroundColor: #DFACAB
*button.pressed.appearance: flat solid
*button.pressed.backgroundColor: #A38180

rootCommand: bsetroot -solid rgb:A3/81/80

window.title.unfocus.backgroundColor: #DFACAB
window.button.unfocus.foregroundColor: #F9BEBD
window.label.unfocus.appearance: parentrelative
window.button.unfocus.appearance: parentrelative
window.label.unfocus.textColor: #F9BEBD
window.*.unfocus.backgroundColor: #DFACAB

window.label.focus.appearance: parentrelative
window.button.focus.appearance: parentrelative
