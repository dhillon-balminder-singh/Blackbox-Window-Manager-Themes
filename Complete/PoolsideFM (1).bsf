#1.SET THE BACKGROUND COLOUR#
rootCommand: bsetroot -solid rgb:77/90/cbb

#2. SET COMMON APPEARANCE#
*appearance: flat solid border
*backgroundColor: pink
*borderColor: black
*textColor: black

#3. SET TITLES APPEARANCE#
menu.title.appearance: flat interlaced border
menu.title.color1: pink
menu.title.color2: black
menu.title.font: :style=Bold
menu.title.alignment: right
window.label.*.appearance: flat interlaced
window.label.*.color1: pink
window.label.*.color2: grey20
window.font: -12:style=Bold
window.alignment: right
window.button.*.appearance: flat solid border
window.button.*.foregroundColor: black
menu.frame.appearance: flat solid border

#4. SET TOOLBAR APPEARANCE#
toolbar.appearance: flat solid border
toolbar.label.appearance: parentrelative
toolbar.clock.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.button.appearance: flat solid border
toolbar.alignment: center

#5. ACTIVE MENU APPEARANCE#
menu.active.appearance: flat solid border
menu.active.backgroundColor: black
menu.active.foregroundColor: white
menu.active.textColor: white
