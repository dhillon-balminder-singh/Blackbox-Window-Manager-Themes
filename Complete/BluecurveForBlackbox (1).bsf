{*appearance: raised gradient vertical interlaced border
*color1: #425D94
*color2: #7B92C6
#*color2: #637DBD}

*appearance: raised gradient vertical border
*color1: #BDC7DE
*color2: #D6DFEF
*foregroundColor: #637194
*borderColor: #848EA5
*alignment: center

window.button.focus.appearance: raised gradient vertical border
window.button.focus.color1: #E7EFFF
window.button.focus.color2: #EFF3FF

window.label.focus.appearance: raised gradient vertical interlaced border
window.label.focus.color1: #425D94
window.label.focus.color2: #7B92C6
window.label.*.textColor: #FFFFFF
window.font::Bold
menu.title.font::Bold

menu.title.appearance: raised gradient vertical interlaced border
menu.title.color1: #425D94
menu.title.color2: #7B92C6
menu.title.textColor: #FFFFFF

menu.active.appearance: raised gradient vertical interlaced border
menu.active.color1: #425D94
menu.active.color2: #7B92C6
menu.active.textColor: #FFFFFF
menu.active.foregroundColor: #FFFFFF
menu.active.font::Bold

*.button.pressed.appearance: sunken gradient vertical
*.button.pressed.color1: #E7EFFF
*.button.pressed.color2: #EFF3FF