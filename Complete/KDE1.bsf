*.appearance: raised solid border
*.backgroundColor: #E6E6E6
*.foregroundColor: #676767

*.borderColor: #5C5C5C

window.label.focus.appearance: flat gradient horizontal
window.label.focus.color1: #464F86
window.label.focus.color2: #727ECA
window.label.focus.textColor: white

window.label.unfocus.appearance: flat gradient horizontal
window.label.unfocus.color1: #C5C5C5
window.label.unfocus.color2: #D6D6D6
window.label.unfocus.textColor: #7F7F7F

window.button.*.appearance: flat solid
window.button.unfocus.foregroundColor: #777777

*button.pressed.appearance: sunken solid border
*button.pressed.backgroundColor: darkgrey

menu.title.appearance: raised gradient horizontal border
menu.title.color1: #464F86
menu.title.color2: #727ECA
menu.title.textColor: white

menu.active.appearance: flat gradient horizontal border
menu.active.color1: #464F86
menu.active.color2: #727ECA
menu.active.textColor: white

#CHANGES SAT 04.01.2020 11:53:36#
window.font: -12:style=Bold
menu.title.font: -12:style=Bold

