*.appearance: raised solid border
*.backgroundColor: grey
menu.title.backgroundColor: grey20
menu.active.backgroundColor: grey98
menu.active.textColor: black
menu.active.foregroundColor: grey30
window.title.focus.backgroundColor: grey20
#window.title.unfocus.backgroundColor: grey
window.label.*.appearance: parentrelative
window.button.*.appearance: parentrelative
window.label.focus.textColor: 
window.button.focus.foregroundColor: 
