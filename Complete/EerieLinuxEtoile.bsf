window.button.unfocus.foregroundColor: grey30
toolbar.label.appearance: parentrelative
toolbar.button.appearance: parentrelative
toolbar.windowLabel.appearance: parentrelative
toolbar.clock.appearance: sunken solid 
toolbar.clock.backgroundColor: grey60
*.font: Dejavu Sans-10
window.font: Dejavu Sans-10:style=Bold
menu.title.font: Dejavu Sans-10:style=Bold
rootCommand: bsetroot -solid "#634B85"
*.alignment: center
slit.appearance: flat solid
slit.backgroundColor: grey30
*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: grey30
window.button.pressed.appearance: sunken solid
window.button.pressed.backgroundColor: grey90