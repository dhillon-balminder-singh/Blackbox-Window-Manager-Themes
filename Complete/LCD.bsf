*.appearance: raised gradient vertical border
*.color1: grey90
*.color2: grey30
*.font: DejaVu Sans Mono-9:Bold
*.alignment: center
*button.appearance: raised gradient border
*.borderColor: grey30
toolbar.appearance: raised gradient vertical border
toolbar.*.appearance: sunken solid
toolbar.*.backgroundColor: #8B958B
toolbar.button.appearance: raised gradient vertical border
window.label.*.appearance: sunken solid border
window.label.*.backgroundColor: #8B958B

rootCommand: bsetroot -solid grey30

*button.pressed.appearance: sunken solid
*button.pressed.backgroundColor: grey40

toolbar.button.pressed.appearance: sunken solid
toolbar.button.pressed.backgroundColor: grey40
#*unfocus.color1: grey100
#*unfocus.color2: grey10

*unfocus.color1: grey60
*unfocus.color2: grey40

#*.foregroundColor: grey20
*.foregroundColor: grey10
*unfocus.foregroundColor: grey30

window.label.unfocus.textColor: grey30

menu.frame.textColor: grey30
menu.active.appearance: sunken solid border
menu.active.backgroundColor: #8B958B
menu.active.textColor: black

menu.frame.appearance: raised solid border
#menu.frame.backgroundColor: grey20
menu.frame.backgroundColor: grey50
menu.title.textColor: black

menu.frame.disabledColor: grey40