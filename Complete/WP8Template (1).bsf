*.appearance: flat solid border
*Color: [FillInYourFavouriteColour]
*.borderWidth: 1
#*.borderColor: [FillInYourFavouriteColour]
*.alignment: center
*.textColor: white
*.font: Deja Vu Sans-12
#*.marginWidth: 3

menu.frame.backgroundColor: white
menu.frame.foregroundColor: black
menu.frame.textColor: black
menu.frame.borderWidth: 3
menu.frame.marginWidth: 0

menu.active.backgroundColor: [FillInYourFavouriteColour]
menu.active.foregroundColor: white

window.title.focus.backgroundColor: [FillInYourFavouriteColour]
window.button.focus.foregroundColor: white
window.label.focus.textColor: white
#window.button.focus.backgroundColor: dark red
window.button.focus.backgroundColor: #B63249

window.title.unfocus.backgroundColor: [FillInYourFavouriteDarkerColour]
window.button.unfocus.foregroundColor: black
#window.label.unfocus.textColor: black
window.label.unfocus.appearance: parentrelative
window.button.unfocus.appearance: parentrelative

#for darker tone, use active color -20#

window.button.unfocus.foregroundColor: white
#window.button.unfocus.foregroundColor: white

toolbar.button.foregroundColor: white
toolbar.button.backgroundColor: #B63249